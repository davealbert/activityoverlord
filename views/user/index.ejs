<div class="container">
	<h3>Users</h3>
	<table class="table">
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Title</th>
			<th>Email</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

        <% _.each(users, function(user) { %>
        <tr>
           <td><%= user.id %></td>
           <td><%= user.name %></td>
           <td><%= user.title %></td>
           <td><%= user.email %></td>
           <td><a href="/user/show/<%= user.id %>" class="btn btn-small btn-primary">Show</a></td>
           <td><a href="/user/edit/<%= user.id %>" class="btn btn-small btn-warning">Edit</a></td>

           <td>
           	<form method="POST" action="/user/destroy/<%= user.id %>">
           		<input type="hidden" name="_method" value="delete" />
                <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
           		<input type="submit" class="bnt btn-sm btn-danger" value="Delete" />
           	</form>
           </td>

        </tr>

        <% }) %>
	</table>
</div>
